{% set section = get_section(path="_index.md") %}<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>{{ config.title }}</title>
    <link href="{{ config.base_url }}/atom.xml" rel="self"/>
    <link href="{{ config.base_url }}"/>
    <updated>{{ section.pages | first | get(key="date") | date(format="%+") }}</updated>
    <id>{{ config.base_url }}</id>
    <author>
        <name>{{ config.extra.author_name }}</name>
        <email>{{ config.extra.author_email }}</email>
    </author>

    {% for page in section.pages | reverse | slice(end=20) %}
    <entry>
        <title>{{ page.title }}</title>
        <link href="{{ page.permalink }}"/>
        <updated>{{ page.date | date(format="%+") }}</updated>
        <id>{{ page.permalink }}</id>
        <content type="html">{{ page.content | escape }}</content>
    </entry>
    {% endfor %}
</feed>
